<div class="container mt-5">
    <h2>Manage Books</h2>
    <a class="btn btn-success mb-3" asp-action="CreateBook">Add New Book</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.Price</td>
                    <td>@book.Description</td>
                    <td>
                        <a class="btn btn-info" asp-action="EditBook" asp-route-id="@book.BookId">Edit</a>
                        <form asp-action="DeleteBook" asp-route-id="@book.BookId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this book?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
