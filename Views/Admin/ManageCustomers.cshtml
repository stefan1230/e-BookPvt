@model IEnumerable<e_BookPvt.Models.Customers>

@{
    ViewData["Title"] = "Manage Customers";
}

<div class="container mt-5">
    <h2>Manage Customers</h2>
    <a asp-action="CreateCustomer" class="btn btn-success mb-3">Add New Customer</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact No</th>
                <th>NIC No</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerName</td>
                    <td>@customer.Email</td>
                    <td>@customer.ContactNo</td>
                    <td>@customer.NICNo</td>
                    <td>
                        <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-info">Edit</a>
                        <a asp-action="DeleteCustomer" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
