@model e_BookPvt.Models.Customers

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-5">
    <h2>Delete Customer</h2>
    <p>Are you sure you want to delete this customer?</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">@Model.CustomerName</h5>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Contact No:</strong> @Model.ContactNo</p>
            <p class="card-text"><strong>NIC No:</strong> @Model.NICNo</p>
        </div>
    </div>

    <form asp-action="DeleteCustomer" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
        <a asp-action="ManageCustomers" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
